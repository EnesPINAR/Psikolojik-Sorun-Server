<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <title>Randevular </title>
</head>
<body>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Psikoloh</th>
      <th scope="col">Tarih</th>
      <th scope="col">Zaman</th>
      <th scope="col">Oda Linki</th>
    </tr>
  </thead>
  <tbody>
    <% appointments.forEach(function(appointments){ %>
    <tr>
      <td><%= appointments.psychologist_id.firstName %> <%= appointments.psychologist_id.lastName %></td>
      <td class="appointment_date" value="<%= appointments.appointment_date %>"><%= appointments.appointment_date %></td>
      <td class="appointment_time" value="<%= appointments.appointment_time %>"><%= appointments.appointment_time %></td>
      <td><a class="btn btn-primary" style="visibility: hidden;" href="/room/<%= appointments.room_id %>">Odaya gitmek için tıklayınız</a></td>
    </tr>
    <% }); %>
  </tbody>
</table>
<script src="http://localhost:5000/public/js/jQuery.js" defer></script>
<script src="http://localhost:5000/public/js/appointment.js" defer></script>
</body>
</html>